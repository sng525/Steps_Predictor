<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StepsPredictor.PredictPage"
             Title="Predict Steps">
    <VerticalStackLayout
        Padding="30,150"
        Spacing="40">
        <Label
            x:Name="fileName"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            FontSize="24"/>

        <Button
            Clicked="Predict_Clicked"
            HorizontalOptions="Center"
            Text="Predict Today's Steps"/>

        <Label 
            x:Name="lblResult"
            FontSize="20"
            Text=""
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>